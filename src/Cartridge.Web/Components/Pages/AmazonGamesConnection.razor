                    disabled="@isUploadingProductDetails"
                    style="display: block; padding: 10px; background: var(--retro-bg-secondary); border: 2px solid var(--retro-primary); color: var(--retro-text); font-size: 14px; border-radius: 4px; width: 100%; margin-bottom: 10px; cursor: pointer;"/>
                
                @if (isUploadingProductDetails)
                {
                    <div style="background: rgba(255, 235, 59, 0.1); border: 2px solid var(--retro-accent); padding: 12px; margin-bottom: 15px; border-radius: 4px; display: flex; align-items: center; gap: 10px;">
