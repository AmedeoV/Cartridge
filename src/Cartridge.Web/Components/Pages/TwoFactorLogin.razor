@page "/signin-2fa"
@layout RetroLayout
@using Cartridge.Core.Models
@inject NavigationManager Navigation

<PageTitle>Two-Factor Authentication - CARTRIDGE</PageTitle>

<div style="max-width: 600px; margin: 60px auto; padding: 40px; background: var(--retro-bg-lighter); border: 4px solid var(--retro-border); box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.3);">
    <h2 style="color: var(--retro-primary); text-align: center; margin-bottom: 30px; font-size: 24px;">
        üîê TWO-FACTOR AUTHENTICATION üîê
    </h2>
    
    <p style="color: var(--retro-text); text-align: center; margin-bottom: 30px; font-size: 10px; line-height: 1.8;">
        Enter the 6-digit code from your authenticator app
    </p>
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div style="background: var(--retro-error); color: white; padding: 18px; margin-bottom: 20px; border: 4px solid darkred; font-size: 11px; line-height: 1.8;">
            ‚ö†Ô∏è @errorMessage
        </div>
    }

    <form method="post" action="/api/auth/form-login-2fa">
        <div style="margin-bottom: 25px;">
            <label style="display: block; color: var(--retro-text); font-size: 11px; margin-bottom: 10px; letter-spacing: 1px;">AUTHENTICATION CODE:</label>
            <input type="text" 
                   name="code"
                   required
                   maxlength="6"
                   pattern="[0-9]{6}"
                   class="retro-input" 
                   placeholder="000000"
                   style="width: 100%; padding: 14px; background: var(--retro-bg); color: var(--retro-text); border: 3px solid var(--retro-border); font-family: 'Press Start 2P', monospace; font-size: 16px; text-align: center; letter-spacing: 8px;" />
            <p style="color: var(--retro-text-dim); font-size: 9px; margin-top: 8px; line-height: 1.6;">
                Enter the code from Google Authenticator, Microsoft Authenticator, or similar app
            </p>
        </div>

        <div style="margin-bottom: 25px;">
            <label style="display: flex; align-items: center; color: var(--retro-text-dim); font-size: 10px; cursor: pointer; margin-bottom: 10px;">
                <input type="checkbox" name="rememberMe" value="true" style="margin-right: 10px; transform: scale(1.3);" />
                REMEMBER ME
            </label>
            <label style="display: flex; align-items: center; color: var(--retro-text-dim); font-size: 10px; cursor: pointer;">
                <input type="checkbox" name="rememberMachine" value="true" style="margin-right: 10px; transform: scale(1.3);" />
                DON'T ASK FOR CODE ON THIS DEVICE
            </label>
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn-retro" style="width: 100%; margin-bottom: 15px;">
                <span>‚ñ∫ VERIFY CODE ‚óÑ</span>
            </button>
        </div>
    </form>

    <div style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 2px solid var(--retro-border);">
        <p style="color: var(--retro-text-dim); font-size: 9px; margin-bottom: 15px; line-height: 1.8;">
            Lost access to your authenticator?
        </p>
        <p style="color: var(--retro-text-dim); font-size: 9px; line-height: 1.8;">
            Contact support or use a recovery code
        </p>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a href="/signin" style="color: var(--retro-text-dim); font-size: 9px; text-decoration: none;">‚Üê BACK TO SIGN IN</a>
    </div>
</div>

@code {
    private string? errorMessage;

    protected override void OnInitialized()
    {
        var uri = new Uri(Navigation.Uri);
        if (uri.Query.Contains("error="))
        {
            var queryStart = uri.Query.IndexOf("error=") + 6;
            var queryEnd = uri.Query.IndexOf('&', queryStart);
            var errorParam = queryEnd > 0 
                ? uri.Query.Substring(queryStart, queryEnd - queryStart) 
                : uri.Query.Substring(queryStart);
            errorMessage = Uri.UnescapeDataString(errorParam);
        }
    }
}
