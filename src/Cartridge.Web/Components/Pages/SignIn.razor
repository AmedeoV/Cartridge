@page "/signin"
@layout RetroLayout
@using Cartridge.Core.Models
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager Navigation

<PageTitle>Sign In - CARTRIDGE</PageTitle>

<div style="max-width: 600px; margin: 60px auto; padding: 40px; background: var(--retro-bg-lighter); border: 4px solid var(--retro-border); box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.3);">
    <h2 style="color: var(--retro-primary); text-align: center; margin-bottom: 30px; font-size: 24px;">
        🎮 SIGN IN 🎮
    </h2>
    
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div style="background: var(--retro-error); color: white; padding: 18px; margin-bottom: 20px; border: 4px solid darkred; font-size: 11px; line-height: 1.8;">
            ⚠️ @errorMessage
        </div>
    }

    <form method="post" action="/api/auth/form-login">
        <div style="margin-bottom: 25px;">
            <label style="display: block; color: var(--retro-text); font-size: 11px; margin-bottom: 10px; letter-spacing: 1px;">EMAIL:</label>
            <input type="email" 
                   name="email"
                   required
                   class="retro-input" 
                   placeholder="ENTER YOUR EMAIL"
                   style="width: 100%; padding: 14px; background: var(--retro-bg); color: var(--retro-text); border: 3px solid var(--retro-border); font-family: 'Press Start 2P', monospace; font-size: 11px;" />
        </div>

        <div style="margin-bottom: 25px;">
            <label style="display: block; color: var(--retro-text); font-size: 11px; margin-bottom: 10px; letter-spacing: 1px;">PASSWORD:</label>
            <input type="password" 
                   name="password"
                   required
                   class="retro-input" 
                   placeholder="ENTER PASSWORD"
                   style="width: 100%; padding: 14px; background: var(--retro-bg); color: var(--retro-text); border: 3px solid var(--retro-border); font-family: 'Press Start 2P', monospace; font-size: 11px;" />
        </div>

        <div style="margin-bottom: 30px;">
            <label style="display: flex; align-items: center; color: var(--retro-text-dim); font-size: 10px; cursor: pointer;">
                <input type="checkbox" name="rememberMe" value="true" style="margin-right: 10px; transform: scale(1.3);" />
                REMEMBER ME
            </label>
        </div>

        <div style="text-align: center;">
            <button type="submit" class="btn-retro" style="width: 100%; margin-bottom: 15px;">
                <span>► SIGN IN ◄</span>
            </button>
        </div>
    </form>

    <div style="text-align: center; margin-top: 20px; padding-top: 20px; border-top: 2px solid var(--retro-border);">
        <p style="color: var(--retro-text-dim); font-size: 10px; margin-bottom: 15px; line-height: 1.8;">DON'T HAVE AN ACCOUNT?</p>
        <a href="/signup" class="btn-retro btn-retro-secondary">► CREATE ACCOUNT ◄</a>
    </div>

    <div style="text-align: center; margin-top: 30px;">
        <a href="/" style="color: var(--retro-text-dim); font-size: 9px; text-decoration: none;">← BACK TO HOME</a>
    </div>
</div>

@code {
    private string? errorMessage;

    protected override void OnInitialized()
    {
        // Check if redirected from successful registration or with error
        var uri = new Uri(Navigation.Uri);
        if (uri.Query.Contains("registered=true"))
        {
            errorMessage = null;
            // Could show a success message if desired
        }
        else if (uri.Query.Contains("error="))
        {
            // Extract error message from query string
            var queryStart = uri.Query.IndexOf("error=") + 6;
            var queryEnd = uri.Query.IndexOf('&', queryStart);
            var errorParam = queryEnd > 0 
                ? uri.Query.Substring(queryStart, queryEnd - queryStart) 
                : uri.Query.Substring(queryStart);
            errorMessage = Uri.UnescapeDataString(errorParam);
        }
    }
}

